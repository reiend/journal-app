
<h2>Create new Category</h2>

<%= form_with model: @category, url: category_create_path do |form|  %>

  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
        <div> <span><%= message %></span> </div>
    <% end %>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "@category" %>
  </div>


  <span> <%= form.submit "create" %> </span>
  <span> <%= link_to "List of Category", categories_path %> </span>

<% end %>
